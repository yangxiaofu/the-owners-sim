      "block_credit_assist": 0.5,
      "fake_tackle_attribution": 0.85
    }
  },
  
  "play_timing": {
    "description": "Time ranges for punt execution",
    "real_punt": {
      "min_seconds": 4.2,
      "max_seconds": 6.8
    },
    "fake_punt": {
      "min_seconds": 4.5,
      "max_seconds": 8.5
