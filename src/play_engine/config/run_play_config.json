{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Run Play Configuration",
  "description": "Centralized configuration for run play simulation parameters - Designer balancing file",
  
  "formation_matchups": {
    "description": "Formation vs formation matchup matrix with average yards and variance (NFL avg: 4.4 YPC)",
    "matchups": {
      "I_FORMATION": {
        "FOUR_THREE": {"avg_yards": 4.8, "variance": 2.5},
        "NICKEL": {"avg_yards": 5.5, "variance": 2.8},
        "GOAL_LINE": {"avg_yards": 2.8, "variance": 1.8}
      },
      "SINGLEBACK": {
        "FOUR_THREE": {"avg_yards": 4.4, "variance": 2.3},
        "NICKEL": {"avg_yards": 5.0, "variance": 2.6}
      },
      "SHOTGUN": {
        "FOUR_THREE": {"avg_yards": 3.8, "variance": 2.1},
        "NICKEL": {"avg_yards": 4.2, "variance": 2.2}
      },
      "PISTOL": {
        "FOUR_THREE": {"avg_yards": 4.6, "variance": 2.4}
      }
    },
    "default_matchup": {"avg_yards": 4.2, "variance": 2.2}
  },
  
  "player_attributes": {
    "description": "Player rating thresholds and modifiers for performance impact",
    "rating_thresholds": {
      "elite": 90,
      "good": 80,
      "poor": 65
    },
    "running_back_modifiers": {
      "elite_bonus": 0.30,
      "good_bonus": 0.15,
      "poor_penalty": -0.20
    },
    "linebacker_modifiers": {
      "elite_bonus": 0.25,
      "good_bonus": 0.10,
      "poor_penalty": -0.15
    }
  },
  
  "play_timing": {
    "description": "Time ranges for play execution",
    "run_play_time": {
      "min_seconds": 2.8,
      "max_seconds": 4.5
    }
  },
  
  "statistical_attribution": {
    "description": "Parameters for attributing stats to individual players",
    "blocking": {
      "base_success_rate": 0.7,
      "yards_bonus_multiplier": 0.05,
      "min_blockers": 2,
      "max_blockers": 3
    },
    "tackling": {
      "long_run_threshold": 5,
      "assisted_tackle_probability": 0.75
    },
    "variance_cap": 1.2
  },

  "fumble_rates": {
    "description": "Fumble probability rates for run plays (NFL avg: ~1.5% per rush, adjusted for simulation)",
    "base_fumble_rate": 0.025,
    "rb_skill_modifiers": {
      "elite_reduction": 0.008,
      "good_reduction": 0.004,
      "poor_increase": 0.006
    },
    "recovery_rate": 0.50
  }
}