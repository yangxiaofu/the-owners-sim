{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Run Play Configuration",
  "description": "Centralized configuration for run play simulation parameters - Designer balancing file",
  
  "formation_matchups": {
    "description": "Formation vs formation matchup matrix with average yards and variance (NFL avg: 4.4 YPC). Base values reduced to compensate for breakaway run mechanism adding ~1.6 YPC on average.",
    "matchups": {
      "I_FORMATION": {
        "FOUR_THREE": {"avg_yards": 3.3, "variance": 3.0},
        "NICKEL": {"avg_yards": 4.1, "variance": 3.3},
        "GOAL_LINE": {"avg_yards": 2.2, "variance": 2.2}
      },
      "SINGLEBACK": {
        "FOUR_THREE": {"avg_yards": 3.0, "variance": 2.8},
        "NICKEL": {"avg_yards": 3.6, "variance": 3.1}
      },
      "SHOTGUN": {
        "FOUR_THREE": {"avg_yards": 2.5, "variance": 3.0},
        "NICKEL": {"avg_yards": 3.1, "variance": 3.3}
      },
      "PISTOL": {
        "FOUR_THREE": {"avg_yards": 3.3, "variance": 3.2}
      }
    },
    "default_matchup": {"avg_yards": 2.8, "variance": 2.8}
  },
  
  "player_attributes": {
    "description": "Player rating thresholds and modifiers for performance impact",
    "rating_thresholds": {
      "elite": 90,
      "good": 80,
      "poor": 65
    },
    "running_back_modifiers": {
      "elite_bonus": 0.30,
      "good_bonus": 0.15,
      "poor_penalty": -0.20
    },
    "linebacker_modifiers": {
      "elite_bonus": 0.25,
      "good_bonus": 0.10,
      "poor_penalty": -0.15
    }
  },
  
  "play_timing": {
    "description": "Time ranges for play execution",
    "run_play_time": {
      "min_seconds": 2.8,
      "max_seconds": 4.5
    }
  },
  
  "statistical_attribution": {
    "description": "Parameters for attributing stats to individual players",
    "blocking": {
      "base_success_rate": 0.7,
      "yards_bonus_multiplier": 0.05,
      "min_blockers": 2,
      "max_blockers": 3
    },
    "tackling": {
      "long_run_threshold": 5,
      "assisted_tackle_probability": 0.75
    },
    "variance_cap": 1.5
  },

  "fumble_rates": {
    "description": "Fumble probability rates for run plays (NFL avg: ~1.5% per rush, adjusted for simulation)",
    "base_fumble_rate": 0.050,
    "rb_skill_modifiers": {
      "elite_reduction": 0.008,
      "good_reduction": 0.004,
      "poor_increase": 0.006
    },
    "recovery_rate": 0.50
  },

  "breakaway_run": {
    "description": "Separate explosive play mechanism for 20+ yard runs (NFL avg: ~6.7% per carry)",
    "speed_threshold": 75,
    "base_probability": 0.065,
    "speed_bonus_per_point": 0.002,
    "min_yards": 15,
    "max_yards": 35
  }
}